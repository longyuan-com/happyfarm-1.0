<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ssm.dao.ReceiverDao" >
	<resultMap id="BaseResultMap" type="com.ssm.entity.ReceiverInfo">
		<result column="id" property="id" jdbcType="INTEGER" />
		<result column="user_id" property="user_id" jdbcType="INTEGER" />
		<result column="receiver_name" property="receiver_name" jdbcType="VARCHAR" />
		<result column="receiver_phone" property="receiver_phone" jdbcType="VARCHAR" />
		<result column="receiver_address" property="receiver_address" jdbcType="VARCHAR" />
		<result column="receiver_zip" property="receiver_zip" jdbcType="VARCHAR" />
	</resultMap>
	<!-- 添加收货地址 -->
	<insert id="addReceiverInfo">
	insert into happy_farm_receiverinfo(user_id,receiver_name,receiver_phone,receiver_address,receiver_zip) values(#{user_id},#{receiver_name},#{receiver_phone},#{receiver_address},#{receiver_zip})
	</insert>
	<!-- 根据用户ID查询收货地址 -->
	<select id="selectRInfo" resultType="com.ssm.entity.ReceiverInfo">
	select * from happy_farm_receiverinfo where user_id=#{user_id}
	</select>
	<!-- 根据收货地址ID查询地址 -->
	<select id="editRInfo" resultType="com.ssm.entity.ReceiverInfo">
	 select * from happy_farm_receiverinfo where id=#{id}
	</select>
	<!-- 根据收货地址ID编辑地址 -->
	<update id="editRInfo2" parameterType="com.ssm.entity.ReceiverInfo">
		update happy_farm_receiverinfo set receiver_name=#{receiver_name},receiver_phone=#{receiver_phone},receiver_address=#{receiver_address},receiver_zip=#{receiver_zip} where id=#{id}
	</update>
	<!-- 根据id删除收货地址 -->
	<delete id="deleteReceAddress" parameterType="int">
		delete from happy_farm_receiverinfo where id=#{id}
	</delete>
	<!-- 根据id查询收货地址 -->
	<select id="selectReceByID" resultType="com.ssm.entity.ReceiverInfo">
		select * from happy_farm_receiverinfo where id=#{id}
	</select>
</mapper>