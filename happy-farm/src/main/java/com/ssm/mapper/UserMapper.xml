<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ssm.dao.IUserDao" >
	<resultMap id="BaseResultMap" type="com.ssm.entity.User">
		<result column="id" property="id" jdbcType="INTEGER" />
		<result column="username" property="username" jdbcType="VARCHAR" />
		<result column="password" property="password" jdbcType="VARCHAR" />
	</resultMap>
	
	
	<!--用户登录 -->
	<select id="login" parameterType="java.util.Map" resultType="com.ssm.entity.User">
		select
		*
		from
		happy_farm_user
		where
		username=#{username,jdbcType=VARCHAR}
		AND
		password=#{password,jdbcType=VARCHAR}
	</select>
	<!-- 用户注册 -->
	<insert id="addUser" >
	insert into happy_farm_user(username,password) values(#{username},#{password})
	</insert>
	<!-- 查找用户名 -->
	<select id="findAllName" resultType="com.ssm.entity.User">
	select * from happy_farm_user where username=#{username}
	</select>
	<select id="findAllUser" resultType="com.ssm.entity.User">
	select * from happy_farm_user;
	</select>
</mapper>  